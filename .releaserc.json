{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "add", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "change", "release": "minor" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "remove", "release": "major" },
          { "type": "disable", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "chore", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "add", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "change", "section": "ğŸ”„ Changes" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "revert", "section": "âª Reverts" },
            { "type": "docs", "section": "ğŸ“š Documentation", "hidden": true },
            { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
            { "type": "remove", "section": "ğŸ—‘ï¸ Removals" },
            { "type": "disable", "section": "ğŸš« Disabled" },
            { "type": "test", "section": "âœ… Tests", "hidden": true },
            { "type": "chore", "section": "ğŸ”§ Chores", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "release"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "release/*.tgz",
            "label": "Distribution tarball"
          }
        ]
      }
    ]
  ]
}
