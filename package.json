{
  "name": "@takeshijuan/ideogram-mcp-server",
  "version": "1.0.1",
  "description": "Production-grade Ideogram MCP server for AI image generation integration with Claude Desktop, Cursor, and VS Code",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ideogram-mcp-server": "dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js --packages=external",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "verify:claude-desktop": "bash scripts/verify-claude-desktop.sh",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run build:types && npm run typecheck"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ideogram",
    "ai",
    "image-generation",
    "claude",
    "anthropic",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "axios": "^1.13.5",
    "dotenv": "^16.4.1",
    "form-data": "^4.0.0",
    "pino": "^8.18.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.11.16",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.2.2",
    "esbuild": "^0.27.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.4",
    "semantic-release": "^23.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takeshijuan/ideogram-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/takeshijuan/ideogram-mcp-server/issues"
  },
  "homepage": "https://github.com/takeshijuan/ideogram-mcp-server#readme"
}
